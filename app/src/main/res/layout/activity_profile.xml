<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Name : "
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text=""
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Total"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/age_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text=""
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/age"
        app:layout_constraintBottom_toBottomOf="@+id/age" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Description : "
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <TextView
        android:id="@+id/des_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text=""
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/des"
        app:layout_constraintBottom_toBottomOf="@+id/des" />

    <Button
        android:id="@+id/edit_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit UserName"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/des"/>

    <Button
        android:id="@+id/edit_Des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Description"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Name"/>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Des"/>




</androidx.constraintlayout.widget.ConstraintLayout>